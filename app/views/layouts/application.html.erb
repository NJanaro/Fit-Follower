<!DOCTYPE html>
<html>
  <head>

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@900&display=swap" rel="stylesheet">
    <title>FitFollower</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <% if current_user %>
      <script>
        window.currentUser = { 
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>"
          };
      </script>
    <% end %>
    <script type="text/javascript">
      window.splashURL = "<%= image_url('splash.jpg') %>"
      window.githubURL = "<%= image_url('GitHub-Mark-Light-32px.png') %>"
      window.gmailURL = "<%= image_url('gmail32.png') %>"
      window.liURL = "<%= image_url('LI.png') %>"
      window.emailURL = "<%= image_url('email.png') %>"
      window.mountainbikeURL = "<%= image_url('mountainbike.jpg') %>"
      window.femaleRunnerURL = "<%= image_url('female_runner.jpg') %>"
    </script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
